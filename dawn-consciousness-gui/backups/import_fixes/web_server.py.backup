        event = {
            'timestamp': time.time(),
            'type': 'entropy_injection',
            'message': f'Entropy injected: +{amount}',
            'level': 'warning'
        }
        
        self.events.append(event)
        return {'status': 'success', 'new_entropy_base': self.sim_params['entropy_base']}
    
